<setup>
  <selectFromSequence from="1" to="3" name="a" />
  <selectFromSequence from="0" to="$a-1" name="b" />
  <selectFromSequence from="-2" to="$b" name="c" />

  <math name="ans1" simplify>2+$b</math>
  <math name="ans2" simplify>$c</math>
  <math name="ans3">DNE</math>
