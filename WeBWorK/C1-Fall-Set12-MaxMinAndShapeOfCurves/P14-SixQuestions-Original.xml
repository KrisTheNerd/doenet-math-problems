  <tabular>
    <row bottom="minor">
      <cell>
        <m>1:</m>
      </cell>
      <cell></cell>
      <cell></cell>
      <cell>
        $ans1
      </cell>
    </row>
    <row bottom="minor">
      <cell>
        <m>2:</m>
      </cell>
      <cell></cell>
      <cell></cell>
      <cell>
