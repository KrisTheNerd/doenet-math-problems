      </cell>
    </row>
    <row bottom="minor">
      <cell>
        <m>4:</m>
      </cell>
      <cell></cell>
      <cell></cell>
      <cell>
        $ans4
      </cell>
    </row>
    <row bottom="minor">
      <cell>
        <m>5:</m>
      </cell>
      <cell></cell>
      <cell></cell>
      <cell>
        $ans5
      </cell>
    </row>
    <row bottom="minor">
